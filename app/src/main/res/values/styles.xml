<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GameDetailTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Text styles -->
    <style name="AppTheme.Lato" parent="Base.TextAppearance.AppCompat">
        <item name="com.piticlistudio.playednext:font">fonts/Lato-Regular.ttf</item>
    </style>

    <style name="AppTheme.LatoBold" parent="Base.TextAppearance.AppCompat">
        <item name="com.piticlistudio.playednext:font">fonts/Lato-Bold.ttf</item>
    </style>

    <style name="AppTheme.Title" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="com.piticlistudio.playednext:font">fonts/Lato-Regular.ttf</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AppTheme.Loading" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="com.piticlistudio.playednext:font">fonts/Lato-Bold.ttf</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Error.Caption" parent="@style/Base.TextAppearance.AppCompat.Display4">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textColor">@color/error_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="AppTheme.Error.Subtitle" parent="@style/Base.TextAppearance.AppCompat.Body1">
        <item name="com.piticlistudio.playednext:font">fonts/Lato-Regular.ttf</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Error.Title" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="com.piticlistudio.playednext:font">fonts/Lato-Bold.ttf</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">true</item>
        <item name="com.piticlistudio.playednext:font">fonts/Lato-Regular.ttf</item>
    </style>

    <style name="AppTheme.PlatformLabel" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.PlatformLabel.Horizontal" parent="AppTheme.PlatformLabel">
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="GameDetail.Description" parent="AppTheme.Lato">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GameSearch.Cell.Title" parent="AppTheme.Lato">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GameRelationList.Cell.Header" parent="Base.TextAppearance.AppCompat.Large">
        <item name="com.piticlistudio.playednext:font">fonts/Lato-Bold.ttf</item>
        <item name="android:textColor">@color/colorAccent</item>

    </style>

    <style name="GameRelationList.Cell.Header.Subtitle" parent="Base.TextAppearance.AppCompat.Small">
        <item name="com.piticlistudio.playednext:font">fonts/Lato-LightItalic.ttf</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="GameRelationList.Cell.Subtitle" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="com.piticlistudio.playednext:font">fonts/Lato-Regular.ttf</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GameRelationList.Cell.Title" parent="Base.TextAppearance.AppCompat.Large.Inverse">
        <item name="com.piticlistudio.playednext:font">fonts/Lato-Regular.ttf</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Widget.CardContent.Vertical" parent="Widget.CardContent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.CardContent.Title" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="com.piticlistudio.playednext:font">fonts/Lato-Regular.ttf</item>
    </style>


</resources>
