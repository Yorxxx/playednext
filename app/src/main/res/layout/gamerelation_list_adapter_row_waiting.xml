<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/gamerelation_list_waiting_items_height"
                                    android:layout_marginEnd="@dimen/gamerelation_list_verticalbar_width"
                                    android:layout_marginStart="@dimen/gamerelation_list_verticalbar_width"
                                    android:elevation="@dimen/material_card_elevation_resting"
                                    app:cardCornerRadius="@dimen/material_card_corner_radius"
                                    app:cardMaxElevation="@dimen/material_card_elevation_raised">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/gamerelation_list_adapter_row_swipelayout"/>

        <LinearLayout
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF0000"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/gamerelation_list_inner_padding">

                <ImageView
                    android:id="@+id/cover"
                    android:layout_width="@dimen/gamerelation_list_waiting_cover_size"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sample_cover"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.piticlistudio.playednext.ui.widget.CustomTextView
                        android:id="@+id/title"
                        style="@style/GameRelationList.Cell.Title.Todo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/material_list_text_first_position_margin_start"
                        android:maxLines="1"
                        android:text="@string/lorem"
                        android:textColor="@android:color/white"/>

                    <com.piticlistudio.playednext.ui.widget.CustomTextView
                        android:id="@+id/subtitle"
                        style="@style/GameRelationList.Cell.Subtitle.Todo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/material_list_text_first_position_margin_start"
                        android:layout_marginTop="@dimen/gamerelation_list_subtitle_margin_top"
                        android:maxLines="1"
                        android:text="@string/lorem"
                        android:textColor="#ffdede"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/boost"
                    style="@style/GameRelationList.Cell.Subtitle.Todo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableTop="@drawable/gamerelation_list_waiting_boost_image"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>