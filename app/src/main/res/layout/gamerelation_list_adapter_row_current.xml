        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginStart="@dimen/todo_list_swipe_icons_margin"-->
        <!--android:gravity="center"/>-->

        <!--<com.piticlistudio.vgtodo.ui.widget.CustomTextView-->
        <!--style="@style/AppTheme.Todo.Cell.Swipe.SendToDone"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginEnd="@dimen/todo_list_swipe_icons_margin"-->
        <!--android:gravity="center"-->
        <!--android:text="@string/todo_list_send_to_done"/>-->

        <!--</RelativeLayout>-->

        <LinearLayout
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/cover"
                    android:layout_width="@dimen/gamerelation_list_current_cover_size"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sample_cover"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.piticlistudio.playednext.ui.widget.CustomTextView
                        android:id="@+id/title"
                        style="@style/GameRelationList.Cell.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/material_list_text_first_position_margin_start"
                        android:maxLines="2"
                        android:text="@string/lorem"/>

                    <com.piticlistudio.playednext.ui.widget.CustomTextView
                        android:id="@+id/subtitle"
                        style="@style/GameRelationList.Cell.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/material_list_text_first_position_margin_start"
                        android:layout_marginTop="@dimen/gamerelation_list_subtitle_margin_top"
                        android:maxLines="2"
                        android:text="@string/lorem"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</android.support.v7.widget.CardView>