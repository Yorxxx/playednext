<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="@dimen/game_search_adapter_cell_width"
                                    android:layout_height="@dimen/game_search_adapter_cell_height"
                                    android:background="@android:color/white"
                                    android:orientation="horizontal"
                                    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="centerCrop"/>

        <com.piticlistudio.playednext.ui.widget.CustomTextView
            android:id="@+id/title"
            style="@style/GameSearch.Cell.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/lorem"/>

    </LinearLayout>

</android.support.v7.widget.CardView>