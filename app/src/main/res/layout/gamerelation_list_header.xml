<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="@dimen/gamerelation_list_header_height"
              android:layout_marginTop="@dimen/gamerelation_list_header_margin_top"
              android:gravity="center_vertical">

    <View
        android:id="@+id/border"
        android:layout_width="@dimen/gamerelation_list_verticalbar_width"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/gamerelation_list_verticalbar_width">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/gamerelation_list_header_icon_size"
            android:layout_height="@dimen/gamerelation_list_header_icon_size"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/gamerelation_list_inner_items_margin"/>

        <com.piticlistudio.playednext.ui.widget.CustomTextView
            android:id="@+id/text"
            style="@style/GameRelationList.Cell.Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/gamerelation_list_inner_items_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/lorem"/>

        <ImageView
            android:id="@+id/toggle"
            android:layout_width="@dimen/gamerelation_list_header_toggle_size"
            android:layout_height="@dimen/gamerelation_list_header_toggle_size"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/gamerelation_list_inner_items_margin"
            app:srcCompat="@drawable/gamerelation_list_header_hide"/>

    </LinearLayout>


</LinearLayout>